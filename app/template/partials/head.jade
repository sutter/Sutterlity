meta(name='twitter:description', content=metaDesc)
meta(name='twitter:image', content='#{urlLocal}/assets/img/twitter-card.png')

// OG
meta(property='og:title', content=title)
meta(property='og:description', content=metaDesc)
meta(property='og:site_name', content='Sutterlity')
meta(property='og:type', content='website')
meta(property='og:url', content='#{urlLocal}/')
meta(property='og:language', content='fr')
meta(property='og:image', content='#{urlLocal}/assets/img/card.png')


